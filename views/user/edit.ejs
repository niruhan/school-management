<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>	
		
<% if (messages.error) { %>
	<div class="alert alert-danger">
	    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
	      <span class="glyphicon glyphicon-hand-right"></span>&nbsp;&nbsp;<%- messages.error %>
	</div>
<% } %>

<% if (messages.success) { %>
	<div class="alert alert-success">
	    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
	      <span class="glyphicon glyphicon-hand-right"></span>&nbsp;&nbsp;<%- messages.success %>
	</div>
<% } %>

<div class="panel panel-info" >
                  <div class="panel-heading">
                      <div class="panel-title"> Edit <%= name %>'s Details</div>

                  </div>

                  <div style="padding-top:30px" class="panel-body" >
                      <form action="/users/edit/<%= id %>" method="post" name="form1" class="form-horizontal">

                          <div style="margin-bottom: 20px" class="input-group">
                                      <span class="input-group-addon" style="background:#fff"><i class="glyphicon glyphicon-user"></i></span>
                                      <input type="text" name="name" placeholder="Enter your Name" id="name" value="<%= name %>" class="form-control" required>
                          </div>

                          <div style="margin-bottom: 20px" class="input-group">
                                      <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                      <input type="email" name="email" placeholder="Enter your Email" value="<%= email %>" class="form-control" required>
                          </div>

                          <div style="margin-bottom: 15px" class="input-group">
                                      <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                                      <input type="number" name="phone_num" placeholder="Mobile Number" value="<%= phone_num %>" class="form-control" required>
                          </div>
                          <div style="margin-bottom: 15px" class="input-group">
                                      <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                      <input type="number" name="age" placeholder="Age" value="<%= age %>" class="form-control" required>
                          </div>
                          <div class="form-group">
                              <div class="col-sm-12 controls">
                                  <button type="submit" name="Submit" class="btn btn-primary pull-left"><i class="glyphicon glyphicon-pencil"></i> Edit</button>
                              </div>
                          </div>
                              <input type="hidden" name="_method" value="PUT" />
                          </form>
                      </div>
                  </div>

<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>
